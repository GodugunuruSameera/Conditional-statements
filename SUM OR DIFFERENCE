CODE:
import java.util.*;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int N1 = sc.nextInt();
        int N2 = sc.nextInt();

        if (N1 > N2)
            System.out.println(N1 - N2);
        else
            System.out.println(N1 + N2);
    }
}
