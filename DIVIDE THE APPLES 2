CODE:
import java.util.*;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();   // children
        int k = sc.nextInt();   // apples

        int remainder = k % n;

        System.out.println(remainder);
    }
}
